{
  "extends": "next/core-web-vitals",
  "plugins": ["import"],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./*"]],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "rules": {
    "no-unused-vars": "warn",
    "react/no-unescaped-entities": "off",
    "import/no-useless-path-segments": "error"
  }
}
